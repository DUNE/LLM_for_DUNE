# DUNE-GPT Configuration File
# Copy this file to .env and fill in your actual values

# Required: Argo API Configuration
ARGO_API_USERNAME=your_username_here
ARGO_API_KEY=your_api_key_here
ARGO_API_URL=https://apps.inside.anl.gov/argoapi/api/v1/resource/chat/

# Required: DUNE DocDB Configuration
DUNE_DOCDB_USERNAME=your_docdb_username
DUNE_DOCDB_PASSWORD=your_docdb_password

# Optional: DUNE Indico Configuration
DUNE_INDICO_ACCESS_KEY=your_indico_access_key

# Fermilab Authentication (set to false to disable authentication)
ENABLE_AUTHENTICATION=true
FERMILAB_CLIENT_ID=your_fermilab_client_id
FERMILAB_CLIENT_SECRET=your_fermilab_client_secret
FERMILAB_SESSION_SECRET=your-super-secret-session-key-change-in-production
FERMILAB_SCOPE=openid email profile
FERMILAB_REDIRECT_URI=http://127.0.0.1:8000/auth

# Document Processing Limits
DOC_LIMIT_DOCDB=50
DOC_LIMIT_INDICO=50

# Model Configuration
EMBEDDING_MODEL=multi-qa-mpnet-base-dot-v1

# Application Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Logging Configuration
LOG_LEVEL=INFO

# Query Configuration
DEFAULT_TOP_K=3
LLM_TEMPERATURE=0.1
LLM_TOP_P=0.9
LLM_MODEL=gpt4o 
